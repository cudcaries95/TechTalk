<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edu.news">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Activities.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Common.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".Activities.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <!--            android:label="@string/title_activity_home"-->
        </activity>
<!--        <activity-->
<!--            android:name=".Activities.SearchActivity"-->
<!--            android:theme="@style/AppTheme.NoActionBar">-->
<!--        </activity>-->

        <activity android:name=".Activities.WebView"/>
        <activity android:name=".Activities.PostDetailActivity" />
        <activity android:name=".Activities.UserProfile"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".Activities.AllCategories" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>